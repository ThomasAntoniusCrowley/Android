<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        xmlns:android="http://schemas.android.com/apk/res/android" >


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Main Courses"
            android:id="@+id/mains_title" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" android:layout_weight="0.55"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Fish"
            android:id="@+id/fish_button" android:layout_below="@+id/mains_title"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_gravity="left" android:layout_weight="1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Meat"
            android:id="@+id/meat-button" android:layout_below="@+id/fish_button" android:layout_alignLeft="@+id/fish_button"
            android:layout_alignStart="@+id/fish_button" android:layout_alignRight="@+id/fish_button"
            android:layout_alignEnd="@+id/fish_button" android:layout_weight="1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="sharer "
            android:id="@+id/sharer_button" android:layout_below="@+id/meat-button"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/meat-button" android:layout_alignEnd="@+id/meat-button"
            android:layout_weight="1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="BUrger"
            android:id="@+id/burger_button" android:layout_below="@+id/sharer_button"
            android:layout_alignLeft="@+id/meat-button" android:layout_alignStart="@+id/meat-button"
            android:layout_alignRight="@+id/sharer_button" android:layout_alignEnd="@+id/sharer_button"
            android:layout_weight="1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="sandwhich"
            android:id="@+id/button"
            android:layout_below="@+id/burger_button" android:layout_alignLeft="@+id/burger_button"
            android:layout_alignStart="@+id/burger_button" android:layout_alignRight="@+id/burger_button"
            android:layout_alignEnd="@+id/burger_button" android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_gravity="right" android:layout_weight="1">
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Back"
                android:id="@+id/back_button" android:layout_below="@+id/button" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Current order"
                android:id="@+id/order_button"
                android:layout_below="@+id/button" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_toRightOf="@+id/back_button"
                android:layout_toEndOf="@+id/back_button" android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>